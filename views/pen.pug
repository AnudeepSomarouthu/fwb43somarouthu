extends layout

block content
  h1= title
  p Welcome to the Pen  pug 
  div(class="container-fluid")
        div(class="row")
            -
                let pen   = [
                    {
                        "color": "Blue",
                        "ink_color": "Red",
                        "cost": "10$"
                    },
                    {
                        "color": "Pink",
                        "ink_color": "Blue",
                        "cost": "12$"
                    },
                    {
                        "color": "Red",
                        "ink_color": "Green",
                        "cost": "9$"
                    }, 
                    {
                        "color": "Grey",
                        "ink_color": "Black",
                        "cost": "29$"
                    },                         
                ]
            each v,index in pen  
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.ink_color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
        script. 
            function buy(itemNo)
            {
                alert(`You purchased Item ${itemNo+1}`)
            }    
